# Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=travelsmart_db

# LangChain Configuration
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=laLANGSMITH_API_KEYn
LANGSMITH_PROJECT=LANGSMITH_PROJECT
OPENAI_API_KEY=OPENAI_API_KEY
SERPAPI_API_KEY = SERPAPI_API_KEY
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=TravelSmart AI

# Email Verification Settings
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# Frontend URLs (Update these with your actual frontend URLs)
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password
DASHBOARD_URL=http://localhost:3000

# Location API (Optional - for IP geolocation)
IPAPI_KEY=your-ipapi-key

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Security Settings
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Email Templates (Optional - for custom templates)
EMAIL_TEMPLATE_DIR=templates/emails 